<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PickerBaseTheme" parent="android:Theme.Light">
        <item name="android:windowTitleSize">@dimen/custom_title_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/custom_bg_style</item>
        <item name="android:checkboxStyle">@style/checkboxStyle</item>
        <item name="android:radioButtonStyle">@style/radioStyle</item>
    </style>

    <style name="titleText">
        <item name="android:textSize">17.5sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="custom_bg_style">
        <item name="android:background">@color/title_background</item>
    </style>

    <style name="checkboxStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check</item>
    </style>

    <style name="radioStyle" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio</item>
    </style>
</resources>
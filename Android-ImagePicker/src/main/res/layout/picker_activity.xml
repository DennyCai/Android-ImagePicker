<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/photoWall"
        android:numColumns="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottomHeight"
        android:background="@color/bottomColor">

        <Button
            android:id="@+id/choiceAlbum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bottomLeft"
            android:layout_marginTop="@dimen/choiceAlbumMargin"
            android:layout_marginBottom="@dimen/choiceAlbumMargin"
            android:text="@string/choiceAlbum"/>

        <Button
            android:id="@+id/pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/bottomLeft"
            android:layout_marginTop="@dimen/choiceAlbumMargin"
            android:layout_marginBottom="@dimen/choiceAlbumMargin"
            android:text="@string/pick"/>

    </FrameLayout>


</FrameLayout>